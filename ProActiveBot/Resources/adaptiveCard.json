{
  "type": "AdaptiveCard",
  "body": [
    {
      "columns": [
        //{
        //  "type": "Column",
        //  "items": [
        //    {
        //      "style": "person",
        //      "type": "Image",
        //      "url": "https://cdn.jsdelivr.net/npm/simple-icons@3.13.0/icons/medium.svg",
        //      "size": "small"
        //    }
        //  ]
        //},
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "bolder",
              "text": "Check-in Survey",
              "wrap": true,
              "color": "dark"
            },
            {
              "type": "TextBlock",
              "size": "Default",
              "weight": "Bolder",
              "text": "This is your pulse.",
              "horizontalAlignment": "Left",
              "wrap": true
            }
          ],
          "width": "stretch"
        }
      ],
      "type": "ColumnSet"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "Energy",
      "label": "How are your energy levels today?",
      "isRequired": true,
      "errorMessage": "Please choose your energy level.",
      "choices": [
        {
          "title": "Drained",
          "value": 1
        },
        {
          "title": "Running Low",
          "value": 2
        },
        {
          "title": "Operational",
          "value": 3
        },
        {
          "title": "Powerful",
          "value": 4
        },
        {
          "title": "Super Charged!",
          "value": 5
        }
      ],
      "$data": "Energy",
      "style": "expanded"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "Motivation",
      "label": "How motivated do you feel today?",
      "isRequired": true,
      "errorMessage": "Please choose how motivated you are.",
      "choices": [
        {
          "title": "Disheartened",
          "value": 1
        },
        {
          "title": "Unmotivated",
          "value": 2
        },
        {
          "title": "Somewhat",
          "value": 3
        },
        {
          "title": "Inspired",
          "value": 4
        },
        {
          "title": "Unstoppable",
          "value": 5
        }
      ],
      "$data": "Motivation",
      "style": "expanded"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "Feeling",
      "label": "How are you feeling today?",
      "isRequired": true,
      "errorMessage": "Please choose how you are feeling today.",
      "choices": [
        {
          "title": "☺️ Relaxed ",
          "value": 1
        },
        {
          "title": "😌  Calm",
          "value": 2
        },
        {
          "title": "😐 Neutral",
          "value": 3
        },
        {
          "title": "😟 Tense",
          "value": 4
        },
        {
          "title": "🤯 Stressed",
          "value": 5
        }
      ],
      "$data": "Feeling",
      "style": "expanded",
      "spacing": "Large"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "Work",
      "label": "Do you find your workload today to be reasonable?",
      "isRequired": true,
      "errorMessage": "Please choose how reasonable your workload is.",
      "choices": [
        {
          "title": "1- Reasonable",
          "value": 1
        },
        {
          "title": "2",
          "value": 2
        },
        {
          "title": "3",
          "value": 3
        },
        {
          "title": "4",
          "value": 4
        },
        {
          "title": "5- Unreasonable",
          "value": 5
        }
      ],
      "$data": "Work",
      "style": "expanded"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "Mood",
      "label": "What is your mood today?",
      "isRequired": true,
      "errorMessage": "Please choose your mood.",
      "choices": [
        {
          "title": "😫 Awful",
          "value": 1
        },
        {
          "title": "😕 Bad",
          "value": 2
        },
        {
          "title": "🙂 Okay",
          "value": 3
        },
        {
          "title": "😃 Good",
          "value": 4
        },
        {
          "title": "😄 Great",
          "value": 5
        }
      ],
      "$data": "Mood",
      "style": "expanded"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Cancel",
      "mode": "secondary",
      "style": "destructive",
      "id": "Cancel",
      "associatedInputs": "none",
      "data": {
        "ButtonType": "cancel"
      }
    },
    {
      "type": "Action.Submit",
      "title": "Submit",
      "style": "positive",
      "id": "Submit",
      "data": {
        "ButtonType": "submit"
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3"
}