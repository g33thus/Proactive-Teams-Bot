{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "${creator.profileImage}",
              "size": "Small"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Perkio",
              "wrap": true,
              "style": "heading",
              "color": "Dark"
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "TextBlock",
      "size": "Default",
      "weight": "Bolder",
      "text": "This is your pulse.",
      "horizontalAlignment": "Left",
      "wrap": true,
      "style": "default"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "energy",
      "label": "How are your energy levels today?",
      "value": "1",
      "isRequired": true,
      "errorMessage": "Please choose your energy level.",
      "choices": [
        {
          "title": "Drained",
          "value": "Drained"
        },
        {
          "title": "Running Low",
          "value": "Running Low"
        },
        {
          "title": "Operational",
          "value": "Operational"
        },
        {
          "title": "Powerful",
          "value": "Powerful"
        },
        {
          "title": "Super Charged!",
          "value": "Super Charged!"
        }
      ],
      "$data": "energy",
      "style": "expanded"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "motivation",
      "label": "How motivated do you feel today?",
      "value": "1",
      "isRequired": true,
      "errorMessage": "Please choose how motivated you are.",
      "choices": [
        {
          "title": "Disheartened",
          "value": "Disheartened"
        },
        {
          "title": "Unmotivated",
          "value": "Unmotivated"
        },
        {
          "title": "Somewhat",
          "value": "Somewhat"
        },
        {
          "title": "Inspired",
          "value": "Inspired"
        },
        {
          "title": "Unstoppable",
          "value": "Unstoppable"
        }
      ],
      "$data": "motivation",
      "style": "expanded"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "feeling",
      "label": "How are you feeling today?",
      "value": "1",
      "isRequired": true,
      "errorMessage": "Please choose how you are feeling today.",
      "choices": [
        {
          "title": "☺️ Relaxed ",
          "value": "Drained"
        },
        {
          "title": "😌  Calm",
          "value": "Running Low"
        },
        {
          "title": "😐 Neutral",
          "value": "Operational"
        },
        {
          "title": "😟 Tense",
          "value": "Powerful"
        },
        {
          "title": "🤯 Stressed",
          "value": "Super Charged!"
        }
      ],
      "$data": "feeling",
      "style": "expanded",
      "spacing": "Large"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "work",
      "label": "Do you find your workload today to be reasonable?",
      "isRequired": true,
      "errorMessage": "Please choose how reasonable your workload is.",
      "choices": [
        {
          "title": "1- Reasonable",
          "value": "1"
        },
        {
          "title": "2",
          "value": "2"
        },
        {
          "title": "3",
          "value": "3"
        },
        {
          "title": "4",
          "value": "4"
        },
        {
          "title": "5- Unreasonable",
          "value": "5"
        }
      ],
      "$data": "work",
      "style": "expanded"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "mood",
      "label": "What is your mood today?",
      "value": "1",
      "isRequired": true,
      "errorMessage": "Please choose your mood.",
      "choices": [
        {
          "title": "😫 Awful",
          "value": "Drained"
        },
        {
          "title": "😕 Bad",
          "value": "Running Low"
        },
        {
          "title": "🙂 Okay",
          "value": "Operational"
        },
        {
          "title": "😃 Good",
          "value": "Powerful"
        },
        {
          "title": "😄 Great",
          "value": "Super Charged!"
        }
      ],
      "$data": "mood",
      "style": "expanded"
    },
    {
      "type": "ColumnSet"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "Cancel",
                  "mode": "secondary",
                  "style": "destructive",
                  "id": "Cancel",
                  "associatedInputs": "none"
                }
              ]
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "Submit",
                  "style": "positive",
                  "id": "Submit"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}